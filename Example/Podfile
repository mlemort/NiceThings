use_frameworks!

def sharedPods
  pod 'SwiftLint', '~> 0.40'
  pod 'NiceThings', :path => '../'
end

def sharedTestsPods
  pod 'Quick', '~> 3.0'
  pod 'Nimble', '~> 8.1'
end

target 'NiceThings_Example' do
  platform :ios, '10.3'
  sharedPods

  target 'NiceThings_Tests' do
    inherit! :search_paths
    sharedTestsPods
  end
end

target 'NiceThingsMacOS_Example' do
  platform :osx, '10.15'
  sharedPods

  target 'NiceThingsMacOS_Tests' do
    inherit! :search_paths
    sharedTestsPods
  end
end
